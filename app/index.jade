doctype html
html(lang='en-US')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title TicTacToe
    link(rel='stylesheet', href='css/main.css')
  body
      <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    .login.hidden
      h1 Please Login Or Register
      form
        .username
          label Enter Username
          input.userNameInput(type='text', name='username', placeholder='Username', required='required' )
        .password
          label Enter Password
          input.userPasswordInput(type='password', name='password', placeholder='Password' required='required')
        button.register Register
        input.loginButton(type='submit', name='login', value='Login')
    .gameSelect.hidden
      .createGameContainer
        button.addgamebutton.
          Create Game
      .chooseGameContainer
        h4 Click A Game From To Join
        ul.gameListContainer

    .app
      h1 Tic-Tac-Toe
      .playerxcontainer
        .playerxcell
        p Player X
      .playerocontainer
        .playerocell
        p Player O

      .tictactoecontainer
        .cell(data-cell='topleftcell')
        .cell(data-cell='topmidcell')
        .cell(data-cell='toprightcell')
        .cell(data-cell='midleftcell')
        .cell(data-cell='midmidcell')
        .cell(data-cell='midrightcell')
        .cell(data-cell='botleftcell')
        .cell(data-cell='botmidcell')
        .cell(data-cell='botrightcell')

